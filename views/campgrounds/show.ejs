<div class="row">
    <div class="col-6 "> 

      <div class="card mb-5">

        <!-- Placeholder google image, not sure why unsplash is not working -->
      <!-- <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap"> -->
      <img class="card-img-top" src="https://i.pinimg.com/originals/93/c0/fc/93c0fc8ca2141a85dc1d871556ae3418.jpg" alt="Card image cap">
      
      <div class="card-body">
        <h5 class="card-title"><%=campground.title%></h5>
        <p class="card-text"><%=campground.description%></p>
      </div>
      
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%=campground.location%></li>
        <li class="list-group-item">Â£ <%=campground.price%>/night</li>
        <li class="list-group-item">Vestibulum at eros</li>
      </ul>

      <div class="card-body">
        <a class="card-link btn text-white" style="background-color: #0B1A26" href="/campgrounds/<%= campground._id %>/edit">Update Campground</a>
        <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
          <button class="btn btn-danger" > Delete </button>
          </form>
      </div>

      <div class="card-footer"> 
        2 days ago
      </div>
    </div>
  </div>

  <div class="col-6">
    <!-- Leave a review section -->
    <h2>Leave a Review</h2>
      
    <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="mb-3 validated-form" novalidate>
  
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input class="form-range" type="range" name="review[rating]" id="rating" step="1" min="1" max="5">
      </div>
  
      <div class="mb-3">
        <label for="body">Review</label>
          <textarea class="form-control" name="review[body]" id="body" cols="10" rows="5" required> </textarea>
            <div class="valid-feedback">
              Looks Good!
            </div>
          </div>
      <button class="btn btn-success">Submit</button>
    </form>
  
    <!-- implementing review data onto show page -->
    <% for (let review of campground.reviews) { %>
      <div class="card mb-3">
        <div class="mb-3 card-body">
         <h5 class="card-title">Rating: <%= review.rating %></h5>
          <p class="card-text"><%= review.body %></p>

          <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger"> Delete Review </button>
          </form>

        </div>
      </div>
    <%  } %>
      </div>
</div>

